@page
@model EcommerceApp.Pages.Products.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Product</h4>
    <hr />

    <div class="row" >
    <div  class="col-xl-4" >

            <a href="@Url.Content(Model.Product.Image)">
                <img src="@Url.Content(Model.Product.Image)" alt="Product Image" class="img-fluid" />
            </a>
    </div>
    <div  class="col-xl-8" >
        <h3>
                    @Html.DisplayFor(model => model.Product.Name)
           
        </h3>
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.Name)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.Name)
                </dd>
               
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.Price)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.Price)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.Quantity)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.Quantity)
                </dd>
                

                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.Category)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.Category.CategoryID)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Product.Description)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Product.Description)
                </dd>
            </dl>


            <div class="mb-10 p-2">
                <a class="btn btn-warning" style="" asp-page="./Edit" asp-route-id="@Model.Product?.ProductID">Edit</a> 
                <a class="btn btn-outline-warning" asp-page="./Index">Back to List</a>
            </div>
    </div>
        

    </div>
</div>

